#include <iostream>
#include <vector>

using namespace std;

int main() {
    
    vector<int> house(40);

    for (int i = 0; i < house.size(); ++i) 
    {
        house[i] = rand() % 10; 
    }

    
    int apartmentNumber;
    cout << "Введите номер квартиры (1-40): ";
    cin >> apartmentNumber;

    if (apartmentNumber >= 1 && apartmentNumber <= 40) 
    {
        int index = apartmentNumber - 1;
        int residents = house[index];

        
        int entrance = (index / 10) + 1;
        int floor = ((index % 10) / 2) + 1;

        cout << "Квартира: " << apartmentNumber << endl;
        cout << "Подъезд: " << entrance << endl;
        cout << "Этаж: " << floor << endl;
        cout << "Количество жильцов: " << residents << endl;

        
        int neighbor1 = -1, neighbor2 = -1;
        if ((index % 2) == 0) 
        { 
            if (index + 1 < (entrance * 10) && (index + 1) < house.size()) 
            {
                neighbor2 = apartmentNumber + 1;
            }
        } else 
        { 
            if (index - 1 >= (entrance - 1) * 10) 
            {
                neighbor1 = apartmentNumber - 1;
            }
        }

        cout << "Соседи на этаже: ";
        if (neighbor1 != -1) 
        {
            cout << neighbor1 << " ";
        }
        if (neighbor2 != -1) 
        {
            cout << neighbor2 << " ";
        }
        cout << endl;
    } else 
    {
        cout << "Некорректный номер квартиры." << endl;
    }

    /
    cout << "\nСуммарное количество жильцов для каждого подъезда:" << endl;
    for (int i = 0; i < 4; ++i) 
    {
        int totalResidents = 0;
        for (int j = 0; j < 10; ++j) 
        {
            totalResidents += house[i * 10 + j];
        }
        cout << "Подъезд " << i + 1 << ": " << totalResidents << endl;
    }

    
    cout << "\nНомера квартир, где живут многодетные семьи (более 5 человек):" << endl;
    for (int i = 0; i < house.size(); ++i) 
    {
        if (house[i] > 5) 
        {
            cout << i + 1 << " ";
        }
    }
    cout << endl;

    return 0;
}
