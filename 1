#include <iostream>
#include <cstdlib>
using namespace std;
int main()
{
	setlocale(LC_ALL, "rus");
	int arr[40];
	int number_kvartiri = 0;
	int number_people = 0;
	int number_people1 = 0;
	int number_people2 = 0;
	int number_people3 = 0;
	int number_people4 = 0;
	int large_families = 0;

	cout << "Введите номер квартиры (В доме 40 квартир): ";
	cin >> number_kvartiri;
	if (number_kvartiri > 0 && number_kvartiri < 40)
	{
		for (int i = 0; i < sizeof(arr) / sizeof(arr[0]); i++)
		{
			arr[i] = rand() % 7 + 1;
		}

		if (number_kvartiri % 2 == 0)
		{
			number_people += arr[number_kvartiri];
			number_people += arr[number_kvartiri - 1];
			cout << "На этом этаже проживают " << number_people << endl;
		}
		else
		{
			number_people += arr[number_kvartiri];
			number_people += arr[number_kvartiri + 1];
			cout << "На этом этаже проживают " << number_people << endl;
		}
		for (int i = 0; i < 10; i++)
		{
			number_people1 += arr[i];
		}
		for (int i = 10; i < 20; i++)
		{
			number_people2 += arr[i];
		}
		for (int i = 20; i < 30; i++)
		{
			number_people3 += arr[i];
		}
		for (int i = 30; i < 40; i++)
		{
			number_people4 += arr[i];
		}
		
		for (int i = 0; i < 40; i++)
		{
			
			if (arr[i] > 5)
			{
				cout << "Квартира многодетной семьи " << i + 1 << endl;
			}
		}
		cout << endl <<"Количество жильцев подъезд 1 " << number_people1 << endl;
		cout << "Количество жильцев подъезд 2 " << number_people2 << endl;
		cout << "Количество жильцев подъезд 3 " << number_people3 << endl;
		cout << "Количество жильцев подъезд 4 " << number_people4 << endl;
		cout << "Общее количество жильцов " << number_people1 + number_people2 + number_people3 + number_people4;
	}
	else
	{
		cout << "В доме нет такой квартиры";
	}
	
	
	
}
