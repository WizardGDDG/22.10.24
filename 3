#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "rus");
	const int marka = 10;
	int prices[marka] = { 5000000, 7500000, 6000000, 7500000, 8000000, 7000000, 8000000, 6500000, 8000000, 7200000 };
	int max = 0;
	int index = 0;
	int number_one = 0;
	int last_number = 0;
	
	for (int i = 0; i < sizeof(prices)/sizeof(prices[0]); i++)
	{
		cout << prices[i] << " ";
	}
	for (int i = 0; i < 10; i++)
	{
		if (max < prices[i])
		{
			max = prices[i];
			index = i;
			if (max == prices[i])
			{
				number_one = i;
			}
		}
	}
	int firstMaxIndex = -1, lastMaxIndex = -1;
	for (int i = 0; i < sizeof(prices) / sizeof(prices[0]); ++i)
	{
		if (prices[i] == max)
		{
			if (firstMaxIndex == -1)
			{
				firstMaxIndex = i + 1;
			}
			lastMaxIndex = i + 1;
		}
	}
	/*cout << endl << "Самая дорогая машина: " << max<< " ее номер " << index;*/
	cout << endl <<"Номер первого автомобиля с максимальной стоимостью: " << firstMaxIndex << endl;
	cout << "Номер последнего автомобиля с максимальной стоимостью: " << lastMaxIndex << endl;
}

