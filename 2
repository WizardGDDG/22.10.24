#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "rus");
	const int day = 31;
	int month[day];
	int average_temperature = 0;
	int a = 0;
	for (int i = 0; i < sizeof(month)/sizeof(month[0]); i++)
	{
		month[i] = rand() % -15 + -28;
		average_temperature += month[i];

	}
	average_temperature /= 31;
	for (int i = 0; i < 31; i++)
	{
		cout << month[i];
		if (average_temperature > month[i])
		{
			a++;
		}
	}
	cout << endl <<"Средняя температура: " << average_temperature;
	cout << endl <<"Количество раз температура опускалась ниже среденей: " << a;
}

